<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/3.4/menu">

<menu id="apps-accessories-menu" label="Accessories">
  <item label="Thunar">
    <action name="Execute">
      <command>thunar</command>
      <startupnotify>
        <enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
  <item label="Bluetooth">
    <action name="Execute">
      <command>blueberry</command>
      <startupnotify>
        <enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
</menu>

<menu id="apps-editors-menu" label="Editors">
  <item label="Code">
    <action name="Execute">
      <command>code</command>
      <startupnotify>
        <enabled>yes</enabled>
        <wmclass>Code</wmclass>
      </startupnotify>
    </action>
  </item>
</menu>

<menu id="apps-display-menu" label="Display">
  <item label="Wallpaper">
    <action name="Execute">
      <command>nitrogen</command>
    </action>
  </item><item label="Monitors">
    <action name="Execute">
      <command>arandr</command>
    </action>
  </item>
</menu>

<menu id="apps-term-menu" label="Terminals">
    <item label="Alacritty">
        <action name="Execute">
        <command>alacritty</command>
    </action>
  </item>
</menu>

<menu id="apps-net-menu" label="Internet">
  <item label="Firefox">
    <action name="Execute">
      <command>firefox-developer-edition</command>
      <startupnotify>
        <enabled>yes</enabled>
        <wmclass>Firefox</wmclass>
      </startupnotify>
    </action>
  </item>
  <item label="Chrome">
    <action name="Execute">
      <command>chromium</command>
      <startupnotify>
        <enabled>yes</enabled>
        <wmclass>Opera</wmclass>
      </startupnotify>
    </action>
  </item>
</menu>

